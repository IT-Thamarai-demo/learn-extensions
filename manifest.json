{
    "manifest_version": 3,
    "name": "My Chrome Extension",
    "version": "1.0",
    "description": "A basic Chrome extension.",
    "permissions": ["storage","alarms","notifications"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
    
            "128": "./icons/icon.png"
        }
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],  
          "css": ["popup.css"],
          "js":["popup.js"]
        }
      ]
}      